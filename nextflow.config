process.container = 'tubiomics/vulcan:latest'
docker.enabled = true


process {
    withName:countReads {
        container = 'tubiomics/vulcan-qc:latest'
    }
    withName:trimReads {
        container = 'tubiomics/vulcan-qc:latest'
    }
    withName:taxanomic_classification {
        container = 'tubiomics/vulcan-ta:latest'
    }
    withName:kaiju_to_krona {
        container = 'tubiomics/vulcan-ta:latest'
    }
    withName:krona_import_text {
        container = 'tubiomics/vulcan-ta:latest'
    }
    withName:kaiju_to_table {
        container = 'tubiomics/vulcan-ta:latest'
    }
}